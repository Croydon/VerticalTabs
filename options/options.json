{
    "style.tab.status": {
        "name": "style.tab.status",
        "type": "bool",
        "title": "Show tab status on text label",
        "description": "Unloaded: strike-through; Unread/busy: underline",
        "value": false
    },
    "events.tab.close.mouse.middleclick": {
        "name": "events.tab.close.mouse.middleclick",
        "type": "bool",
        "title": "Close tabs with mouse middle click",
        "value": false
    },
    "style.tab.button.close.displayalways": {
        "name": "style.tab.button.close.displayalways",
        "type": "bool",
        "title": "Display the close button on all tabs (except pinned tabs)",
        "value": false
    },
    "style.tab.showUrlInTooltip": {
        "name": "style.tab.showUrlInTooltip",
        "type": "menulist",
        "title": "Configure tab tooltip on mouse over",
		"value": "title",
		"options": [
			{
				"value": "title",
				"label": "Title only"
			},
			{
				"value": "title-url",
				"label": "Title - URL"
			},
			{
				"value": "url-title",
				"label": "URL - Title"
			},
			{
				"value": "url",
				"label": "URL only"
			}
		]
    },
	"theme": {
		"name": "theme",
		"type": "menulist",
		"title": "Theme",
		"value": "dark",
		"options": [
			{
				"value": "dark",
				"label": "Dark (recommended)"
			},
			{
				"value": "light",
				"label": "Light (recommended)"
			},
			{
				"value": "darwin",
				"label": "Darwin"
			},
			{
				"value": "feather",
				"label": "Feather"
			}
		]
	},
	"tabtoolbarPosition": {
		"name": "tabtoolbarPosition",
		"type": "menulist",
		"title": "Toolbar Position",
		"value": "bottom",
		"options": [
			{
				"value": "bottom",
				"label": "Bottom"
			},
            {
                "value": "top",
                "label": "Top"
            },
            {
                "value": "hide",
                "label": "Hide"
            }
		]
	},
	"setDefaultPrefs": {
		"name": "setDefaultPrefs",
		"type": "control",
		"title": "Reset preferences of VTR",
		"label": "Restore default preferences"
	},
    "options.sync.enabled": {
        "name": "options.sync.enabled",
        "type": "bool",
        "title": "Sync options across all devices via Firefox Sync (you need to have Firefox Sync enabled)",
        "value": true
    },
    "showHiddenSettings": {
        "name": "showHiddenSettings",
        "type": "bool",
        "title": "Display advanced settings",
        "value": false,
        "hidden": false
    },
    "debug": {
		"name": "debug",
		"type": "bool",
		"title": "Enable console logging for debugging",
		"value": false,
		"hidden": true
	},
    "experiment": {
		"name": "experiment",
		"type": "bool",
		"title": "Enable VTR experimental features <b>(**unstable!**)</b>",
		"value": false,
		"hidden": true
	},
    "meta.options.time.lastsaved": {
        "name": "meta.options.time.lastsaved",
        "type": "integer",
        "title": "Timestamp, last change of options",
        "value": 0,
        "hidden": true,
        "readonly": true
    }
}
