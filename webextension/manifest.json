    "version": "0.8.1-alpha",
    "manifest_version": 2,
    "author": "Michael 'Croydon' Keck",
    "developer": 
    {
        "name": "Michael 'Croydon' Keck"
    },
    "homepage_url": "https://github.com/Croydon/vertical-tabs-reloaded",
