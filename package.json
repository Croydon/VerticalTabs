{
	"title": "Vertical Tabs Reloaded",
	"name": "vertical-tabs-reloaded",
	"id": "verticaltabsreloaded@go-dev.de",
	"description": "This Firefox add-on arranges tabs in a vertical rather than horizontal fashion.",
	"homepage": "https://github.com/Croydon/vertical-tabs-reloaded",
	"icon": "resource://verticaltabsreloaded-at-go-dev-dot-de/data/icon.png",
	"author": "Croydon",
	"license": "MPL-2.0",
	"version": "0.5.0",
	"permissions": 
	{
		"private-browsing": true
	},
	"engines": 
	{
		"firefox": "45.0 - 47.0"
    },
	"preferences-branch": "@verticaltabsreloaded",
	"preferences": [{
		"name": "right",
		"type": "bool",
		"title": "Display tabs on the right",
		"value": false
	},
	{
		"name": "hideInFullscreen",
		"type": "bool",
		"title": "Hide tabs when in fullscreen",
		"value": true
	},
	{
		"name": "theme",
		"type": "menulist",
		"title": "Theme",
		"value": "dark",
		"options": [
			{
				"value": "windows",
				"label": "Windows"
			},
			{
				"value": "darwin",
				"label": "Darwin"
			},
			{
				"value": "linux",
				"label": "Linux"
			},
			{
				"value": "dark",
				"label": "Dark"
			},
			{
				"value": "light",
				"label": "Light"
			}
		]
	},
	{
		"name": "toggleDisplayHotkey",
		"type": "string",
		"title": "Hotkey for hiding/showing tabbar",
		"value": "control-alt-v"
	},
	{
		"name": "width",
		"type": "integer",
		"title": "Width of the tab sidebar",
		"value": 250,
		"hidden": true
	}]
}
